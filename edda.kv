#:kivy 1.0.9


<PlayScreen>:
    GridLayout:
        cols: 2
        spacing: 30
        size: root.size

        AsyncImage:
            allow_stretch: True
            source: root._album_art
            center_x: (self.width/2)

        GridLayout:
            id: info
            rows: 4
            spacing: 20

            Label:
                font_size: 40
                text_size: info.width, None
                halign: 'center'
                text: root._artist

            Label:
                font_size: 40
                text_size: info.width, None
                halign: 'center'
                text: root._album

            Label:
                font_size: 40
                text_size: info.width, None
                halign: 'center'
                text: root._title

            GridLayout:
                cols: 3

                IconButton:
                    halign: "right"
                    source: "icons/previous.png"
                    on_press: root.previousSong()

                IconButton:
                    source: root._stream_status_icon
                    on_press: root.playPauseSong()

                IconButton:
                    halign: "left"
                    source: "icons/next.png"
                    on_press: root.nextSong()

<InfoScreen>:
    timescreen: timescreen
    currentweather: currentweather
    BoxLayout:
        TimeScreen:
            id: timescreen
        Weather:
            id: currentweather

<TimeScreen>:
    orientation: "vertical"
    padding: [0, 200, 0, 200]
    Label:
        text: root.clock
        font_size: "100dp"
        bold: True
    Label:
        text: root.weekday
        font_size: "50dp"
    Label:
        text: root.date
        font_size: "50dp"

<Weather>:
    orientation: "vertical"
    padding: [0, 0, 0, 50]
    AsyncImage:
        allow_stretch: True
        size_hint_y: 80
        source: root.icon
    Label:
        size_hint_y: 10
        text: root.location
        underline: True
        font_size: "30dp"
    BoxLayout:
        size_hint_y: 10
        Label:
            text: "{}Â°C".format(root.temperature)
            font_size: "30dp"
        Label:
            text: "{} mm".format(root.precipitation)
            font_size: "30dp"
        Label:
            text: "{} mps".format(root.wind_speed)
            font_size: "30dp"